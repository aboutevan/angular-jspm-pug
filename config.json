{
  "styles" : {
    "src" : "dev/main.sass",
    "watch" : [
    	"dev/*.sass",
    	"dev/**/*.{sass, scss}",
    	"dev/**/**/*.{sass, scss}"
    ],
    "dest" : "dist/assets/css"
  },
  "js" : {
    "src" : "dev/main.js",
    "watch" : [
    	"dev/*.js",
    	"dev/**/*.js",
    	"dev/**/**/*.js",
    	"!dev/js/vendor",
    	"gulpfile.babel.js",
    	"tasks/*.js"
    ],
    "dest" : "dist/assets/js"
  },
  "views" : {
    "src" : ["dev/*.pug"
    ],
    "watch" : [
      "dev/*.pug",
      "dev/**/*.pug",
      "dev/**/**/*.pug"
    ],
    "dest" : "dist"
  },
  "server" : {
    "baseDir" : "./dist"
  },
  "foundationJS" : {
    "src" : "./node_modules/foundation-sites/js/foundation.",
    "dest" : "src/js/vendor"
  }
}

